<form method='POST' action='/books/destroy/confirm/{{book.id}}'>
  <div class="container-fluid">
    <p class="form-text">Delete {{title}}?</p>
    <div class="btn-group">
      <button type="submit" value='DELETE' 
              class="btn btn-outline-dark">DELETE</button>
      <a class="btn btn-outline-dark" 
              href="/books" 
              role="button">
         Cancel</a>
    </div>
  </div>
</form>
