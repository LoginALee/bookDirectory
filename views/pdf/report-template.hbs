<!DOCTYPE html>
<html>
    <head>
        <style>
        table {
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        </style>
    </head>
    <body>
        <div style="width: 85%; margin: 0 7.5%;">
            <div style="text-align: center; padding-left: 50px;">            
              <h1>{{username}}'s Books Report</h1>
              <h6>{{date}}</h6>
              {{#if books}}
              <h2>Books list</h2>
              <table >
                {{#each books}}
                 <tr>
                   <td>{{title}}</td>
                   <td>{{author}}</td>
                 </tr>
                {{/each}}
              </table>
              {{else}}
                <h2> No books yet</h2>
              {{/if }}
             </div>
        </div>
    </body>
</html>
